package body RailSystem is

   --------------
   -- addTrack --
   --------------

   procedure addTrack
     (r_system: in out RailSystem;
      id: in Positive;
      origin: in Tracks.Origin_Type;
      destination: in Tracks.Destination_Type)
   is
      track: Tracks.Track;
   begin

      track.Origin:= origin;
      track.Destination:= destination;


   end addTrack;

